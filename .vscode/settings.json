{
    "json.format.enable": false,
    "json.schemas": [
        {
            "fileMatch": [
                "info.json"
            ],
            "url": "https://raw.githubusercontent.com/qmk/qmk_firmware/master/data/schemas/keyboard.jsonschema"
        }
    ],
    "git.ignoredRepositories": [
        "__qmk__",
        "__vial__",
    ],
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
"[c]": {"editor.formatOnSave": true},
    "[json]": {"editor.formatOnSave": true},
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}"
    ]
}